{
  "info": {
    "_postman_id": "expense-tracker-backend-collection",
    "name": "Expense Tracker Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/login",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Me (Protected)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/me",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "me"]
            }
          }
        },
        {
          "name": "Refresh Access Token",
          "request": {
            "method": "POST",
            "header": [],
            "body": { "mode": "raw", "raw": "{}" },
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/refresh",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/logout",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "logout"]
            }
          }
        },
        {
          "name": "Logout All Devices",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/logout-all",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "logout-all"]
            }
          }
        },
        {
          "name": "OAuth - Google",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/google",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "google"]
            }
          }
        },
        {
          "name": "OAuth - GitHub",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/github",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "github"]
            }
          }
        }
      ]
    },

    {
      "name": "Transactions",
      "item": [
        {
          "name": "Create Transaction",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 500,\n  \"type\": \"EXPENSE\",\n  \"categoryId\": 1,\n  \"date\": \"2025-01-01T12:00:00Z\",\n  \"note\": \"Groceries\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/v1/transactions",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "transactions"]
            }
          }
        },
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/transactions",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "transactions"]
            }
          }
        },
        {
          "name": "Get Transaction by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/transactions/{{TRANSACTION_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "transactions", "{{TRANSACTION_ID}}"]
            }
          }
        },
        {
          "name": "Update Transaction",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 700,\n  \"type\": \"INCOME\",\n  \"categoryId\": 2,\n  \"date\": \"2025-01-10T10:00:00Z\",\n  \"note\": \"Updated note\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/v1/transactions/{{TRANSACTION_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "transactions", "{{TRANSACTION_ID}}"]
            }
          }
        },
        {
          "name": "Delete Transaction",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{TOKEN}}" }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/transactions/{{TRANSACTION_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "transactions", "{{TRANSACTION_ID}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "BASE_URL", "value": "http://localhost:8080" },
    { "key": "TOKEN", "value": "" },
    { "key": "TRANSACTION_ID", "value": "" }
  ]
}
